                                "properties": {
                                    "description": {
                                        "type": "string",
                                        "example": "Falta de respaldo en los servidores de registro académico."
                                    },
                                    "severity": {
                                        "type": "string",
                                        "example": "Alta"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Hallazgo registrado correctamente."
                    },
                    "422": {
                        "description": "Error de validación"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
