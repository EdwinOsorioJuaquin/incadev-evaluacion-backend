                "responses": {
                    "200": {
                        "description": "Lista de auditorías recuperada correctamente."
                    },
                    "401": {
                        "description": "No autenticado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Auditorías"
                ],
                "summary": "Registrar nueva auditoría",
                "operationId": "479d6fbd38e2871c9bc7592dcdfceb54",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "audit_date",
                                    "summary",
                                    "auditable_type",
                                    "auditable_id"
                                ],
                                "properties": {
                                    "audit_date": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2025-11-10"
                                    },
                                    "summary": {
                                        "type": "string",
                                        "example": "Evaluación general del proceso académico."
                                    },
                                    "auditable_type": {
                                        "type": "string",
                                        "example": "Departamento"
                                    },
                                    "auditable_id": {
                                        "type": "integer",
                                        "example": 12
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Auditoría creada correctamente."
                    },
                    "422": {
                        "description": "Error de validación"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/audits/{id}": {
            "get": {
