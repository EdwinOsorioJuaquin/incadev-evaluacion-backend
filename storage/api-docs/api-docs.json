{
    "openapi": "3.0.0",
    "info": {
        "title": "API de Auditorías INCADEV",
        "description": "Documentación de los endpoints del sistema de auditorías académicas y administrativas (Auditorías → Hallazgos → Evidencias → Acciones → Reportes).",
        "contact": {
            "name": "Grupo 6 - EVALUACION Y MEJORA CONTINUA - INCADEV",
            "email": "evaluacion@incadev.com.pe"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://127.0.0.1:8000",
            "description": "Servidor local de desarrollo"
        }
    ],
    "paths": {
        "/api/findings/{findingId}/actions": {
            "post": {
                "tags": [
                    "Acciones Correctivas"
                ],
                "summary": "Registrar nueva acción correctiva",
                "description": "Crea una nueva acción correctiva asociada a un hallazgo.",
                "operationId": "0a7967cbf7f482e806aade7bfce72829",
                "parameters": [
                    {
                        "name": "findingId",
                        "in": "path",
                        "description": "ID del hallazgo asociado",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "responsible_id",
                                    "action_required",
                                    "due_date"
                                ],
                                "properties": {
                                    "responsible_id": {
                                        "type": "integer",
                                        "example": 2
                                    },
                                    "action_required": {
                                        "type": "string",
                                        "example": "Implementar registro automatizado de auditorías."
                                    },
                                    "due_date": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2025-12-15"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Acción correctiva registrada correctamente"
                    },
                    "404": {
                        "description": "Hallazgo no encontrado"
                    },
                    "422": {
                        "description": "Error de validación"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/actions/{id}/status": {
            "put": {
                "tags": [
                    "Acciones Correctivas"
                ],
                "summary": "Actualizar estado de una acción correctiva",
                "description": "Permite cambiar el estado de una acción correctiva (por ejemplo: de 'pending' a 'completed').",
                "operationId": "677e3c7bd0e072037eed21b62543e636",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID de la acción correctiva",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "status"
                                ],
                                "properties": {
                                    "status": {
                                        "type": "string",
                                        "example": "completed"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Estado actualizado correctamente"
                    },
                    "404": {
                        "description": "Acción no encontrada"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/audits": {
            "get": {
                "tags": [
                    "Auditorías"
                ],
                "summary": "Listar auditorías del auditor autenticado",
